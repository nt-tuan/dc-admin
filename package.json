{
  "name": "distichain-admin-frontend",
  "version": "1.0.0",
  "private": true,
  "homepage": "/admin",
  "scripts": {
    "start": "node initEnv && react-app-rewired start",
    "dev": "node initEnv ./.env.dev && react-app-rewired start",
    "qat": "node initEnv ./.env.qat && react-app-rewired start",
    "staging": "node initEnv ./.env.staging && react-app-rewired start",
    "build": "react-app-rewired build",
    "build-dev": "env-cmd -f .env.dev react-app-rewired build",
    "build-qat": "env-cmd -f .env.qat react-app-rewired build",
    "build-staging": "env-cmd -f .env.staging react-app-rewired build",
    "build-prod": "react-app-rewired build",
    "test": "react-app-rewired test",
    "test:coverage": "react-app-rewired test --coverage --watchAll=false",
    "lint-staged": "lint-staged",
    "prettier": "prettier --write \"src/**/*.{js,jsx,ts,tsx,scss,less}\"",
    "eslint": "eslint --ext .js,jsx src",
    "stylelint": "stylelint \"src/**/*.{scss,less}\""
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,scss,less}": [
      "prettier --write",
      "git add"
    ],
    "src/**/*.{js,jsx}": [
      "eslint"
    ],
    "src/**/*.{scss,less}": [
      "stylelint"
    ]
  },
  "dependencies": {
    "@ant-design/icons": "^4.3.0",
    "@emotion/react": "^11.7.1",
    "@emotion/styled": "^11.6.0",
    "@fortawesome/fontawesome-free": "5.15.1",
    "@mui/icons-material": "^5.2.5",
    "@mui/lab": "^5.0.0-alpha.63",
    "@mui/material": "^5.2.6",
    "@mui/styles": "^5.3.0",
    "@mui/x-data-grid": "^5.2.2",
    "@react-pdf/renderer": "^1.6.10",
    "@stomp/stompjs": "^5.4.4",
    "antd": "4.8.5",
    "antd-dayjs-webpack-plugin": "^1.0.0",
    "antd-img-crop": "^3.13.2",
    "axios": "^0.19.2",
    "classnames": "^2.2.6",
    "connected-react-router": "^6.8.0",
    "dayjs": "^1.8.27",
    "env-cmd": "^10.0.1",
    "eslint-plugin-import": "^2.25.4",
    "fingerprintjs2": "^2.1.2",
    "formik": "^2.2.9",
    "history": "^4.10.1",
    "leaflet": "^1.6.0",
    "leaflet-map": "^0.2.1",
    "notistack": "^2.0.3",
    "nprogress": "^0.2.0",
    "numeral": "^2.0.6",
    "qs": "^6.7.0",
    "react": "^17.0.2",
    "react-custom-scrollbars": "^4.2.1",
    "react-dom": "^17.0.2",
    "react-easy-crop": "^4.0.2",
    "react-google-recaptcha": "^2.0.1",
    "react-helmet": "^6.0.0",
    "react-highlight-words": "^0.16.0",
    "react-lazyload": "^2.6.7",
    "react-leaflet": "^2.6.3",
    "react-number-format": "^4.9.1",
    "react-otp-input": "^2.4.0",
    "react-query": "^3.34.16",
    "react-redux": "^7.2.0",
    "react-router-dom": "^5.1.2",
    "react-router-transition-switch": "1.1.2",
    "react-scripts": "^4.0.3",
    "react-spring": "^8.0.27",
    "react-transition-group": "^4.3.0",
    "redux": "^4.0.5",
    "redux-saga": "^1.1.3",
    "sass": "^1.49.0",
    "sockjs-client": "^1.5.0",
    "store": "^2.0.12",
    "xlsx": "^0.15.6",
    "yup": "^0.32.11"
  },
  "devDependencies": {
    "@babel/plugin-proposal-decorators": "^7.8.3",
    "@testing-library/dom": "^8.1.0",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^12.0.0",
    "babel-plugin-import": "^1.13.0",
    "customize-cra": "^1.0.0",
    "eslint-config-airbnb": "^18.1.0",
    "eslint-config-prettier": "^6.10.1",
    "husky": "^4.2.5",
    "jest": "^27.0.6",
    "jest-watch-typeahead": "^0.6.4",
    "less": "^3.11.3",
    "less-loader": "^5.0.0",
    "lint-staged": "^10.1.3",
    "prettier": "2.0.4",
    "react-app-rewired": "^2.1.8",
    "react-test-renderer": "^17.0.2",
    "stylelint": "^13.3.2",
    "stylelint-config-prettier": "^8.0.1",
    "stylelint-config-standard": "^20.0.0",
    "worker-loader": "^2.0.0"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "jest": {
    "transformIgnorePatterns": [
      "/node_modules/(?!antd|@ant-design|rc-.+?|@babel/runtime).+(js|jsx)$"
    ],
    "coverageReporters": [
      "lcov",
      "text"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/jest-setup.js"
    ],
    "moduleNameMapper": {
      "\\.(css|less|sass|scss)$": "<rootDir>/__mocks__/styleMock.js",
      "antd/es/.*/style": "<rootDir>/__mocks__/styleMock.js",
      "^@/(.*)$": "<rootDir>/src/$1"
    },
    "verbose": true
  },
  "babel": {
    "plugins": [
      [
        "@babel/plugin-proposal-decorators",
        {
          "legacy": true
        }
      ]
    ]
  }
}
